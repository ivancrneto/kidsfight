{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "*.js",
    "**/*.js",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
